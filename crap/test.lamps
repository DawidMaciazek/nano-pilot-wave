units           lj
atom_style      full
dimension       3
neighbor        0.5 bin
neigh_modify    every 1 delay 3 check yes
boundary        p p p

read_data       test.dat

group           fixed type 1
group           dep type 2 
group           moving type 3

velocity        fixed set 0.0 0.0 0.0 sum no units box
velocity        dep create 1.0 482748 dist uniform
velocity        moving set 0.0 0.0 0.0 sum no units box


pair_style      lj/cut 2.5
pair_modify     shift yes
pair_coeff      * * 0.34 2.5

bond_style	fene
bond_coeff	1 30.0 1.5 1.0 1.0

fix 1 fixed setforce 0.0 0.0 0.0
#fix 2 moving setforce 0.0 0.0 10.0
fix 2 moving aveforce 0.0 0.0 10.0
fix 3 dep langevin 1.0 1.0 1.0 12345
fix 4 all nve

timestep        0.005
thermo          50
thermo_style    one

# dump 1 moving custom 1 my.forces tag fx fy fz
dump 2 all atom  1 test.atom
dump_modify 2 image yes scale yes flush yes

run 5000



